---
import TeamGenerator from "../components/TeamGenerator";
import "../styles/global.css";
import { players as staticPlayers } from "../data/players";

let playersData = staticPlayers;

const runtime = (Astro.locals as any).runtime;
if (runtime && runtime.env && runtime.env.DB) {
	try {
		const { results } = await runtime.env.DB.prepare(`
			SELECT p.*, ps.score, ps.wins, ps.losses, ps.draws, ps.total_matches 
			FROM players p 
			INNER JOIN player_stats ps ON p.id = ps.player_id 
			WHERE ps.match_type = 'monday'
		`).all();
		if (results && results.length > 0) {
			playersData = results as any;
		}
	} catch (e) {
		console.error("Error fetching players from D1:", e);
	}
}
